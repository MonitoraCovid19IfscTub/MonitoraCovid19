{
  "compilerOptions": {

    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "es2015"
    ] ,
    "sourceMap": true,
    "outDir": "./dist" ,
    "rootDir": "./src",

    "strict": false,

    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    } ,

    "esModuleInterop": true ,

    "experimentalDecorators": true ,
    "emitDecoratorMetadata": true,


    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  }
}
